{
    "name": "vro-script-editor",
    "displayName": "vro-script-editor",
    "description": "This extension will allow a user to connect to their VRO instance and edit the scripts within the workflows",
    "version": "0.0.1",
    "publisher": "stevio54",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
                "command": "vro.openScript",
                "title": "Open Script Task"
            },
            {
                "command": "vro.openAction",
                "title": "Open Action Script"
            },
            {
                "command": "vro.encryptPassword",
                "title": "Encrypt a Password"
            },
            {
                "command": "vro.addConnection",
                "title": "Add Connection"
            },
            {
                "command": "vro.removeConnection",
                "title": "Remove Connection"
            },
            {
                "command": "vro.saveConnection",
                "title": "Save Connection"
            }
        ],
        "viewsContainers": {
            "activitybar": [{
                "id": "vro-explorer",
                "title": "vRO Explorer",
                "icon": "dep/elegant-director.png"
            }]
        },
        "views": {
            "vro-explorer": [{
                "id": "vroServerSelection",
                "name": "Server Selection",
                "weight": 2,
                "order": 1
            }, {
                "id": "vroDeveloperview",
                "name": "Workflows",
                "order": 2,
                "weight": 8
            }, {
                "id": "vroActionview",
                "name": "Actions",
                "order": 3,
                "weight": 8
            }]
        },
        "menus": {
            "view/title": [{
                "command": "vro.addConnection",
                "when": "view == vroServerSelection"
            }],
            "view/item/context": [{
                    "command": "vro.saveConnection",
                    "when": "view == vroServerSelection && viewItem == Server"
                },
                {
                    "command": "vro.removeConnection",
                    "when": "view == vroServerSelection && viewItem =~ /Server[-global]*/"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "vers": "tsc -v",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.3.4000",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/crypto-js": "^3.1.43",
        "@types/fabric": "^2.6.5",
        "@types/lodash": "^4.14.123",
        "@types/paper": "^0.11.9",
        "@types/request-promise": "^4.1.42",
        "crypto-js": "^3.1.9-1",
        "lodash": "^4.17.11",
        "paper": "^0.12.0",
        "request-promise": "^4.2.4",
        "rxjs": "^6.5.2"
    }
}